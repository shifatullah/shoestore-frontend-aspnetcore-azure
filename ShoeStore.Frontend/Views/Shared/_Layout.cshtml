<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    @if (String.IsNullOrWhiteSpace(ViewData["Title"].ToString()))
    {
    <title>Shoe Store</title>
    }
    else
    {
    <title>@ViewData["Title"] - Shoe Store</title>
    }

    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <environment include="Development">
    </environment>

    <environment exclude="Development">
    </environment>
</head>

<body class="pb-0 mb-0">

    <nav class="navbar fixed-top navbar-dark bg-dark pl-2">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bolder m-0 p-0">SHOES</a>
        <form class="form-inline" role="search" method="post" asp-controller="Home" asp-action="Search">
            <div class="float-right input-group">
                <label class="sr-only" for="search"></label>
                <input name="query" id="query" class="rounded form-control" type="search" placeholder="Search" aria-label="Search">
                <button class="btn pl-1 pr-0 mx-0" type="submit"><i class="fa fa-search text-white"></i></button>
            </div>
        </form>
    </nav>

    <nav class="navbar navbar-expand-lg bg-light navbar-light mb-0 pb-0">
        <div class="container-fluid">
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarCollapse"
                    aria-controls="navbarCollapse"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link ">Men</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ">Women</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ">Kids</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ">Sale</a>
                    </li>
                </ul>
            </div>
            <form class="form-inline mt-2 mt-md-0">
                <span class="badge-dark rounded-circle px-2  mx-1">0</span>
                <button type="submit" class="btn" style="font-size: 130%"><i style="font-size: 100%;" class="fa fa-shopping-cart"></i></button>
            </form>
        </div>
    </nav>    

    <div class="container-fluid m-0 p-0 body-content">
        @RenderBody()
        <partial name="_CookieConsentPartial" />
        <nav class="navbar-expand container-fluid navbar-dark bg-dark text-white">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            Copyright &copy; Shoe Store 2019
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <form class="form-inline pt-2" role="search">
                                <div class="input-group w-75">
                                    <input class="form-control font-italic" type="text" placeholder="Enter email for newsletter" aria-label="Search">
                                    <div class="input-group-append">
                                        <button class="input-group-text" style="font-size: 120%" type="submit"><i class="fa fa-angle-right text-black font-weight-bolder"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="row py-0 my-0">
                        <div class="col-12">
                            <ul class="navbar-nav float-left float-lg-right flex-column flex-md-row flex-lg-row">
                                <li class="nav-item"><a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="About">Terms and Conditions</a></li>
                                <li class="nav-item"><a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="FAQs">FAQ</a></li>
                                <li class="nav-item"><a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                                <li class="nav-item"><a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row py-0 my-0">
                        <div class="col-12">
                            <ul class="py-0 my-0 navbar-nav float-left float-lg-right">
                                <li class="nav-item  pl-0"><i class="fa fa-facebook text-white-50 py-2 pl-0 pr-2" style="font-size: 300%"></i></li>
                                <li class="nav-item"><i class="fa fa-twitter text-white-50 p-2" style="font-size: 300%"></i></li>
                                <li class="nav-item"><i class="fa fa-instagram text-white-50 p-2" style="font-size: 300%"></i></li>
                                <li class="nav-item"><i class="fa fa-whatsapp text-white-50 p-2" style="font-size: 300%"></i></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <environment exclude="Development">
    </environment>
    <environment include="Development">
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
